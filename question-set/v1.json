{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://nexttest-schemas.xfqlittlefan.xyz/question-set/v1.json",
  "type": "object",
  "properties": {
    "version": {
      "type": "integer",
      "const": 1,
      "description": "结构版本"
    },
    "information": {
      "type": "object",
      "description": "题组信息",
      "properties": {
        "title": {
          "type": "string",
          "description": "题组标题"
        },
        "description": {
          "type": "string",
          "description": "题组描述"
        },
        "version": {
          "type": "string",
          "description": "题组版本",
          "pattern": "[0-9]+\\.[0-9]+\\.[0-9]+\\+[0-9]+"
        },
        "author": {
          "type": "string",
          "description": "题组作者"
        }
      },
      "additionalProperties": false,
      "required": [
        "title",
        "description",
        "version",
        "author"
      ]
    },
    "random": {
      "type": "boolean",
      "description": "对题目随机排序",
      "default": false
    },
    "questions": {
      "type": "array",
      "description": "题目列表",
      "items": {
        "type": "object",
        "description": "题目",
        "properties": {
          "type": {
            "type": "string",
            "enum": [
              "selection",
              "filling"
            ],
            "description": "题目类型"
          },
          "question": {
            "type": "string",
            "description": "该题的题目文本，支持 Markdown\n填空题使用 <bank> 创建空位，如需直接显示“ <bank> ”，用“ \\<bank> ”代替。同理“ \\\\<bank> ”显示为“ \\<bank> ”"
          },
          "selectionType": {
            "type": "string",
            "description": "选择题类型",
            "enum": [
              "single",
              "multiple"
            ],
            "default": "single"
          },
          "options": {
            "type": "array",
            "items": {
              "type": "object",
              "description": "选项",
              "properties": {
                "title": {
                  "type": "string",
                  "description": "选项标题"
                },
                "isCorrect": {
                  "type": "boolean",
                  "description": "是否正确"
                },
                "score": {
                  "type": "number",
                  "description": "该选项的分数"
                }
              },
              "additionalProperties": false,
              "required": [
                "title",
                "isCorrect",
                "score"
              ]
            }
          },
          "scoringMode": {
            "type": "string",
            "description": "赋分模式\nloose：宽松模式，选择选项即得对应分\nstrict：严格模式，选对指定数量的选项才得对应分",
            "enum": [
              "loose",
              "strict"
            ],
            "default": "loose"
          },
          "minCorrect": {
            "type": "integer",
            "description": "最小可得分正确数"
          },
          "blanks": {
            "type": "array",
            "description": "空列表",
            "items": {
              "type": "object",
              "description": "空",
              "properties": {
                "scoringMode": {
                  "type": "string",
                  "enum": [
                    "strict",
                    "manual"
                  ],
                  "description": "该空的赋分模式\nmanual：手动模式，手动赋分\nstrict：严格模式，完全匹配才得分",
                  "default": "strict"
                },
                "placeholder": {
                  "type": "string",
                  "description": "该空的提示文本"
                },
                "score": {
                  "type": "number",
                  "description": "该空的分数"
                },
                "answer": {
                  "type": "string",
                  "description": "该空位的答案"
                }
              },
              "required": [
                "scoringMode",
                "placeholder",
                "score",
                "answer"
              ]
            }
          }
        },
        "additionalProperties": false,
        "required": ["type", "question"],
        "oneOf": [
          {
            "properties": {
              "type": {
                "const": "selection"
              }
            },
            "required": ["selectionType", "options", "scoringMode"],
            "oneOf": [
              {
                "properties": {
                  "scoringMode": {
                    "const": "loose"
                  }
                }
              },
              {
                "properties": {
                  "scoringMode": {
                    "const": "strict"
                  }
                },
                "required": ["minCorrect"]
              }
            ]
          },
          {
            "properties": {
              "type": {
                "const": "filling"
              }
            },
            "required": ["blanks"]
          }
        ]
      }
    }
  },
  "additionalProperties": false,
  "required": [
    "version",
    "information",
    "random",
    "questions"
  ]
}